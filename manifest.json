{
  "name": "AniMouto",
  "version": "1.0.3",
  "description": "A little sister to enhance your AniList experience.",
  "permissions": [
    "storage",
    "alarms",
    "identity",
    "*://*.anilist.co/*"
  ],
  "background": {
    "scripts": [
      "bg/oauth_handler.js",
      "bg/notification_watcher.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/anilist_icon.png",
      "32": "img/anilist_icon.png",
      "48": "img/anilist_icon.png",
      "128": "img/anilist_icon.png"
    }
  },
  "icons": {
    "16": "img/anilist_icon.png",
    "32": "img/anilist_icon.png",
    "48": "img/anilist_icon.png",
    "128": "img/anilist_icon.png"
  },
  "web_accessible_resources": [
    "/oauth2/*"
  ],
  "manifest_version": 2
}
